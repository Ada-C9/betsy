
<h3><%= page_title %></h3>

<div class="container">
<%= form_for @user do |u| %>
<%= u.label :name %>
<%= u.text_field :name %>
<%= u.label :username %>
<%= u.text_field :username %>
<%= u.label :email  %>
<%= u.text_field :email %>
<%= u.label :password %>
<%= u.password_field :password_confirmation, :pattern => '(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}' %>
<%= u.submit submit, class: "button" %>
<% end %>
</div>
