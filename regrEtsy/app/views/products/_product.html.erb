<section class="product-item">
  <article>
    <h3><%= item.name %></h3>
    <%= image_url(item) %>
  </article>
  <article>
  <ul>
    <li>
    Description:  <%= item.description %>
    </li>
    <li>
    Categories: <% item.categories %>
    </li>
    <li>
      Price: <%= item.price %>
    </li>
    <li>
    Quantity:  <%= item.stock %>
    </li>
    <li>Add to cart:
      <%= form_with url: add_to_cart_path do |f| %>
      <%= f.hidden_field :product_id, value: item.id%>
      <%= f.number_field :quantity %>
      <%= submit_tag "add to cart", class: "hollow button secondary", method: :post %>
      <% end %>
    </li>
  </ul>
  </article>
  <article>
    <section>
      <h4> rating </h4>
      <p> reviews </p>
    </section>
  </article>
</section>
