<%= form_for @paymentinfo, url: checkout_path do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :mailing_address %>
  <%= f.text_field :mailing_address %>

  <%= f.label :buyer_name %>
  <%= f.text_field :buyer_name %>

  <%= f.label :card_number %>
  <%= f.text_field :card_number %>

  <%= f.label :expiration %>
  <%= f.text_field :expiration %>

  <%= f.label :cvv %>
  <%= f.text_field :cvv %>

  <%= f.label :zipcode %>
  <%= f.text_field :zipcode %>

  <%= f.submit "Checkout"%>

  <% end %>
