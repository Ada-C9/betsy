<h3>this is the shopping cart!!</h3>

<table>
  <tr><strong>
  <td>Product Name</td>
  <td>Price</td>
  <td>Quantity</td>
  <td>Product Total</td>
  <td>Remove</td>
</strong></tr>

  <% @cart_items.each do |item| %>
  <tr>
    <td><%= link_to item.product.name, product_path(item.product) %></td>
    <td><%= number_to_currency(item.product.price) %></td>
    <td><%= item.quantity %></td>
    <td><%= number_to_currency(item.quantity * item.product.price) %></td>
    <td><%= link_to "Remove", delete_cartitem_path, method: :destroy, class: "button", data: { confirm: "Are you sure you want to remove this item from your shopping cart?" } %></td>
  </tr>
  <% end %>
</table>
