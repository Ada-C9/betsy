<h3>User Account Page</h3>

<%= link_to "Add Categories", new_category_path, class: "button" %>
<%= link_to "Add Products", new_user_product_path(@user.id), class: "button" %>

<h4>List of Products</h4>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Update</th>
      <th>Retire</th>
    </tr>
  </thead>
  <tbody>
    <% @user.products.each do |product| %>
    <tr>
      <td><%= link_to product.name, product_path(product) %></td>
      <td>$<%= price_in_dollar(product.price) %></td>
      <td><%= product.stock %></td>
      <td><%= link_to "Update", edit_product_path(product.id), class: "button" %></td>
      <td>
        <% if product.is_active %>
          <!-- <span class="button">Retire</span> -->
          <%= link_to "Retire", product_set_status_path(product.id), method: :put, class: "button" %>
        <% else %>
          <!-- <span class="button">Reactivate</span> -->
          <%= link_to "Reactivate", product_set_status_path(product.id), method: :put, class: "button" %>
        <% end %>
      </td>

    </tr>
    <% end %>
  </tbody>
</table>

<h4>List of Orders</h4>
<table>
  <thead>
    <tr>
      <th>Order Number</th>
      <th>
        Status
        <section class="search-box">
          <%= form_tag(user_path(@user), method: :get) do %>
          <%= select_tag :term, "<option>pending</option><option>paid</option><option>complete</option>".html_safe, include_blank: true %>
          <%= submit_tag "Submit", class: "button" %>
          <% end %>
        </section>
      </th>
      <th>Order Items</th>
      <th>Quantity</th>
      <th>Subtotal</th>
      <th>Shipping Status</th>
    </tr>
  </thead>
  <tbody>
    <% @user.products.each do |product| %>
      <% product.order_items.each do |order_item| %>
        <tr>
          <td><%= link_to order_item.order.id, order_path(order_item.product.id) %></td>
          <td><%= order_item.order.status %></td>
          <td><%= link_to order_item.product.name, product_path(order_item.product.id) %></td>
          <td><%= order_item.quantity %></td>
          <td>$<%= order_item.subtotal %></td>
          <td>
            <% if order_item.is_shipped %>
              <span>Shipped</span>
            <% else %>
              <%= link_to "Mark Shipped", order_item_path(order_item.id), method: :patch, class: "button" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<h4>Order Statistics</h4>

<table>
  <thead>
    <tr>
      <th>Total Revenue</th>
      <th>Number of Orders</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>$<%= @revenue %></td>
      <td><%= @num_orders %></td>
    </tr>
  </tbody>
</table>
