<article>
  <h3>User Summary: <%= link_to @user.username, user_path(@user) %></h3>
  <p>Joined site <%= render_date @user.created_at %></p>

  <%= render partial: "layouts/error_messages", locals: { model: @user } %>

  <div class = "links">
    <p><%= link_to "Back to merchants", users_path, class:"button"%></p>
    <p><%= link_to "Add Product", new_product_path, class:"button" %></p>
    <p><%= link_to "Add Category", new_category_path, class:"button" %></p>
    <p><%= link_to "Orders all merchants", orders_path, class:"button" %></p>
    <p><%= link_to "Account page", user_profile_path, class:"button"%></p>
  </div>



  <h4><%= "Products of #{@user.username}"%></h4>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Stock</th>
        <th>Price</th>
        <th>Picture</th>
        <th>Type</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @user.products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_path(product.id) %></td>
        <td><%= product.stock %></td>
        <td><%= format_price(product.price) %></td>
        <td>
          <%= link_to( image_tag(product.photo_url, width:"60", height:"50"),  product_path(product)) unless product.photo_url.blank? %>
        </td>
        <td><%= product.pet_type%></td>
        <td><%= link_to "Edit", edit_product_path(product.id) %></td>

      </tr>
      <% end %>
    </tbody>
  </table>
</article>
