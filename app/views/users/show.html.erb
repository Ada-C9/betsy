<h3>User Summary: <%= link_to @user.username, user_path(@user) %></h3>
<p>Joined site <%= render_date @user.created_at %></p>

<p><%= link_to "Add Product", new_product_path, class:"button" %></p>
<p><%= link_to "Add Category", new_category_path %></p>
<p><%= link_to "Order Summary" %></p>
<p><%= link_to "All Merchants", users_path%></p>

<h4>Products</h4>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Stock</th>
      <th>Price</th>
      <th>Picture</th>
      <th>Type</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @user.products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_path(product.id) %></td>
        <td><%= product.stock %></td>
        <td><%= format_price(product.price) %></td>
        <td><%= image_tag(product.photo_url, width:"60", height:"50")%></td>
        <td><%= product.pet_type%></td>
        <td><%= link_to "Edit", edit_product_path(product.id)%></td>

      </tr>
    <% end %>
  </tbody>
</table>
