<section>
  <h1>All Merchants:</h1>
  <p>
    <ul class="merchants">
      <% @users.each do |user| %>
      <%= link_to(user.username, user_path(user.id), alt: 'link to') %>
      <li>
        <% user.products.each do |product| %>
        <ul class="container">
          <li>
            <%= link_to( image_tag(product.photo_url),  product_path(product)) unless product.photo_url.blank? %>
          </li>
          <li>
            <%= link_to product.name, product_path(product) %>
          </li>
          <li>
            <%= format_price(product.price) %>
          </li>
          <li>
            <%= product.description %>
          </li>
          <li>
            <% if product.reviews.count == 0 %>
                No reviews
            <% else %>
                <%= render_stars(product.show_rating) %>
            <% end %>
          </li>
        </ul>
        <% end %>
      </li>
    <% end %>
  </ul>
</p>

</section>
