<h4>
  <% page_title ||= "Products" %>
  <%= page_title %>
</h4>

<%= render partial: "layouts/error_messages", locals: { model: @product } %>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description, size: 150 %>

  <%= f.label :price %>
  <%= f.number_field :price, :class => 'text_field', :step => 0.01 %>

  <%= f.label :url, "Image URL" %>
  <%= f.url_field :url %>

  <%= f.label :stock %>
  <%= f.number_field :stock %>

  <div>
    <%= f.label :categories %>
    <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %>
  </div>

  <%= f.submit class: "button" %>
<% end %>
