<%= page_title %>

<%= form_for @product do |f| %>
  <%= f.hidden_field :merchant_id %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :stock %>
  <%= f.number_field :stock %>
  <%= f.label :categories %>
  <%= collection_check_boxes :product, :category_ids, Category.all, :id, :name %>
  <%= form_for @category do |c| %>
    <%= c.button 'Add new categories', method: :post, url: '/categories/new' %>
  <% end %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit action_name %>
<% end %>
