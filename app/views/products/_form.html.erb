<section>
  <%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :stock %>
  <%= f.text_field :stock %>

  <%= f.label :status %>
  <%= f.select :status, ["true", "false"] %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.label :user_id %>
  <%= f.text_field :user_id %>

  <%= f.submit class: "button"%>
  <% end %>
</section>
