
<h2>Details for Product <%= @product.name %></h2>
<p>Price: <%= display_dollars(@product.price) %></p>
<p>Seller <%= @product.merchant.username %></p>
<p>Details: <%= @product.description %></p>
<p>
  Take a Look:
  <div class= "image-container">
    <%= image_tag(@product.image, alt: "bonbon-image", class: "bonbon-img") %>
  </div>
</p>

<p>Average Rating: <%= @product.average_rating %></p>
<%= link_to "Write a review", new_product_review_path(@product) %>
<h4>Reviews:</h4>
<% @product.reviews.each do |review| %>
  <p>Review created at <%= review.created_at %></p>
  <p><%= review.comment %></p>
  <p>Rating: <%= review.rating %></p>
<% end %>
