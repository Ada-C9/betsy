
<h2><%= @product.name %></h2>
<p>Seller: <%= @product.merchant.username %></p>
<p>Description: <%= @product.description %></p>
<p>Price: <%= display_dollars(@product.price) %></p>

<%= form_for @cartitem do |f|%>
  <%= f.hidden_field :product_id, :value => @product.id %>

  <%= f.label :quantity %>
  <%= f.number_field(:quantity, in: 1..@product.stock) %>

  <%= f.submit("Add to cart") %>
<% end %>

<p>
  Take a Look:
  <div class= "image-container">
    <%= image_tag(@product.image, alt: "bonbon-image", class: "bonbon-img") %>
  </div>
</p>

<p>Average Rating: <%= @product.average_rating %></p>
<%= link_to "Write a review", new_product_review_path(@product) %>
<h4>Reviews:</h4>
<% @product.reviews.each do |review| %>
  <p>Review created at <%= review.created_at %></p>
  <p><%= review.comment %></p>
  <p>Rating: <%= review.rating %></p>
<% end %>
