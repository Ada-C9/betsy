<h1><%= @product.name %></h1>


<%= form_for @order_item do |f| %>
  <%= f.number_field :quantity, value: 1, min: 1 %>
  <%= f.hidden_field :product_id, value: @product.id %>
  <%= f.submit "Add to Cart" %>
<% end %>

<img src="<%= @product.image_url %>">


<article>
  <h2>
    Categories: <%= @product.categories.length %>
  </h2>
  <ul>
    <% @product.categories.each do |category| %>
    <li>
      <%= category.name %>
    </li>
    <% end %>
  </ul>
</article>

<article>
  <p>
    Stock: <%= @product.stock %>
  </p>
  <p>
    Price: $<%= @product.price %>
  </p>
  <p>
    Description: <%= @product.description %>
  </p>
  <p>
    Seller ID: <%= @product.user_id %>
  </p>
</article>

<article>
  <h2>Reviews</h2>
  Count: <%= @product.reviews.count %>

  <ul>
    <% @product.reviews.each do |review| %>
    <li>
      Rating: <%= review.rating %>
    </li>
    <li>
      User: <%= review.user_id %>
    </li>
    <li>
      Notes: <%= review.text_review %>
    </li>
    <% end %>
  </ul>
</article>

<article>
  <%= link_to "All products", products_path, class: "button" %>
  <%= link_to "Edit", edit_product_path(@product.id), class: "button" %>
  <%= link_to "Leave a review", new_product_review_path(@product.id), class: "button" %>
</article>
