<div class="">
  <!-- TODO: Add link to the merchant user,
possibly add [:new] to user_products_path -->

<h2>Merchant: <%= link_to @product.user_id, user_path %></h2>

</div>

<div class="">
  <%=image_tag(@product.photo_url)%>
</div>

<div class="">
  <h2><%= @product.name %></h2>
  <h4><%= format_price(@product.price) %></h4>
  <p><%= @product.description %></p>
  <p><%= @product.stock %> Available</p>

    <ul>
      <% @product.reviews.each do |review| %>
      <li>
        <%= review.rating %>
        <%= review.comments %>
        <%= render_date(review.created_at) %>
      </li>
      <% end %>
    </ul>

  <p>Add to Cart</p>

  <p>
   <%= link_to "Leave a Review", new_product_review_path(@product) %>
  </p>

</div>
