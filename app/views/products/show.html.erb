<h3><%= @product.name %></h3>

<div class="product_container">
  <section class="product_details">
    <%= display_image(@product.photo_url) %>
    <p><%= @product.description %></p>
    <p>Price: $<%= @product.price %></p>
    <% if @product.stock > 0 %>
      <p><span class="color_text"><%= @product.stock %></span> in stock</p>
      <%= link_to "Add to Cart", products_path, method: :post, class: "button" %>
    <% else %>
      <p class="alert button">Out of Stock</p>
    <% end %>
  </section>

  <div class="review">
    <section class="new_review">
      <h4>Write a Review</h4>
      <%= form_for @review, url: @action do |f| %>
      <%= f.select :rating, (1..5).to_a, :prompt => 'Select a rating'%>

      <%= f.label :comment %>
      <%= f.text_area :content %>

      <%= f.submit "Sumbit", class: "button" %>
      <% end %>
    </section>

    <section class="existing_reviews">
      <h4>Reviews</h4>
      <% @product.reviews.each do |review| %>
      <p>Rating: <%= review.rating %></p>
      <p><%= review.content %></p>
      <% end %>
    </section>
  </div>
</div>
