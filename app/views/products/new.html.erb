<h3>Create a New Product</h3>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%# TODO: customize code based on data %>
  <%= f.label :category %>
  <%= f.select :category, @categries %>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>

  <%= f.label :stock %>
  <%= f.text_field :stock %>

 <%= f.submit "Save", class: "button" %>
<% end %>
