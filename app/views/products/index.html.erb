<h2>Delicious Products</h2>
<table class= "treats-table">
  <thead>
    <tr>
      <th>Ooooo</th>
      <th>Name:</th>
      <th>Sold By:</th>
      <th>Average Rating:</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td>
        <%= link_to image_tag(product.image, alt: "bonbon-image", class: "product_pic"), product_path(product) %>
      </td>
      <td>
        <%= link_to product.name, product_path(product) %>
      </td>
      <td>
        <%= link_to product.merchant.username, merchant_path(product) %>
      </td>
      <td>
        <%= stars(product.average_rating) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class= "pagination">
  <%= will_paginate @products %>
</div>
