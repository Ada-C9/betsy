<% if @logged_merchant %>
  <h3>Your Products</h3>

  <%= link_to 'Add a new product', new_merchant_product_path(@logged_merchant) %>
<% end %>

<section class='all-products'>
  <% @products.each do |product| %>
  <div class="card" style="width: 300px;">
    <div class="card-image">
      <%= image_tag product.photo_url, alt: product.name, width: 350, height: 350 %>
    </div>
    <div class="card-content">
      <div class="content">
        <h5>
          <%= product.name %>
          <small> by <%= product.merchant.username %> </small>
        </h5>

      </div>
    </div>
  </div>
  <% end %>

</section>
