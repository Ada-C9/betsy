<section>
  <% if params[:category_id] %>
    <h5>Category: <%= Category.find(params[:category_id]).category_name %></h5>
  <% elsif params[:merchant_id] %>
    <h5>Merchant: <%= Merchant.find(params[:merchant_id]).username %></h5>
  <% else %>
    <h5>All Products</h5>
  <% end %>

  <% if @products.where(product_active: true).count == 0 %>
      <article>
        <p>Sorry, these products may not be available...</p>
      </article>
    <% end %>

      <% @products.each do |p| %>
        <% if p.product_active %>
          <%= link_to product_path(p.id) do %>
            <article>
              <%= image_tag p.photo_url, alt:"product image" unless p.photo_url.blank? %>
              <p><%= p.name.capitalize %></p>
              <p>$<%= format_price(p.price) %></p>
            </article>
          <% end %>
        <% end %>
      <% end %>
    </section>
    <section>
</section>
