<% if @order_products.any? %>
  <% @order_products.each do |i| %>
    <p><%= i.product.name %> | <%= link_to "Delete", order_product_path(i), :data => {:confirm => "You sure?", :method => "delete"} %></p>

    <p><%= "Unit Price: #{i.product.price} | Quantity: #{i.quantity} | Total Price: #{number_to_currency(i.product.price * i.quantity)}" %></p>

  <% end %>
  <p>Your Total: <%= number_to_currency current_order.order_total %></p>
<% else %>
  <h3>Your shopping cart is empty.</h3>
<% end %>
