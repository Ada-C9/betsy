<%= form_for @paymentinfo, url: checkout_path do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :mailing_address %>
  <%= f.text_field :mailing_address %>

  <%= f.label :buyer_name %>
  <%= f.text_field :buyer_name %>

  <%= f.label :card_number %>
  <%= f.number_field :card_number, pattern: '/[0-9]{12,19}/', message: 'CC must be a number, 12- 19 digits' %>

  <%= f.label :expiration %>
  <%= f.text_field :expiration, pattern '//' %>

  <%= f.label :cvv %>
  <%= f.text_field :cvv, pattern: '/[0-9]{3}/', message: 'Must be three digits' %>

  <%= f.label :zipcode %>
  <%= f.text_field :zipcode %>

  <%= f.submit "Checkout"%>

  <% end %>
