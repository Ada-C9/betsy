<h3>Checkout</h3>

<%= form_for @order do |f| %>

  <h4>Shipping Information</h4>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :street_address %>
  <%= f.text_field :street_address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip_code %>
  <%= f.text_field :zip %>

  <h4>Billing Information</h4>

  <%= f.label :name_on_card %>
  <%= f.text_field :name_cc %>

  <%= f.label :card_number %>
  <%= f.text_field :credit_card %>

  <%= f.label :expiration_date %>
  <%= f.date_field :expiry, "data-provide" => 'datepicker' %>

  <%= f.label :security_code %>
  <%= f.text_field :cvv %>

  <%= f.label :billing_zip_code %>
  <%= f.text_field :billing_zip %>

  <%= f.submit "Place Order", class: "button" %>
<% end %>
