<h3>Order Details</h3>

<h5>Order Number: <%= @order.id %></h5>
<h5>Status: <%= @order.status %></h5>

<h4>Customer Information</h4>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Street Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip Code</th>
      <th>Last 4 digits of Card</th>
      <th>Expiration Date</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.name %></td>
      <td><%= @order.email %></td>
      <td><%= @order.street_address %></td>
      <td><%= @order.city %></td>
      <td><%= @order.state %></td>
      <td><%= @order.zip %></td>
      <td>last 4 digits to be shown</td>
      <td><%= @order.expiry %></td>
    </tr>
  </tbody>
</table>
