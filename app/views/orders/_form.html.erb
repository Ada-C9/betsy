
<section>

<%= form_for @order do |t|%>

  <%= t.label :name %>
  <%= t.text_field :name %>

  <%= t.label :email %>
  <%= t.email_field :email%>

  <%= t.label :name_on_card%>
  <%= t.text_field :name_on_card%>

  <%= t.label :creditcard, maxlength: 16 %>
  <%= t.number_field :creditcard%>

  <%= t.label :expiration_month%>
  <%= t.date_select :expiration_month, :discard_day => true, :discard_year => true, :use_month_numbers => true %>

  <%= t.label :expiration_year%>
  <%= t.date_select :expiration_year, :discard_day => true, :discard_month => true, :start_year => Date.today.year, :end_year => (Date.today.year+10) %>

  <%= t.label :cvv, maxlength: 4 %>
  <%= t.number_field :cvv%>

  <%= t.label :mail_address%>
  <%= t.text_field :mail_address%>

  <%= t.label :billing_address%>
  <%= t.text_field :billing_address%>

  <%= t.label :zipcode%>
  <%= t.number_field :zipcode%>

  <%= t.hidden_field :status, :value => "completed" %>

  <%= t.submit "Place Order", class: "button"%>
<%end%>

</section>
