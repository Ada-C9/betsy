<h1>Your orders</h1>

<!-- product = Product.find(op.product_id)  -->

<table>
  <tr>
    <th>Order</th>
    <th>Status</th>
    <th>Total</th>
  </tr>
  <tbody>
    <tr>
      <% @orders.each do |order| %>
      <% unless order.status == "open" %> <!-- Only show orders that were checkedout already (not show the order in the cart) -->
      <td> <strong><%= link_to  "Order ##{order.id}", order_path(order.id)  %><br /></strong></td>
      <td><%= order.status.capitalize %></td>
      <td><%= format_price(order.total) %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
