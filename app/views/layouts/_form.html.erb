
<h3>Add a new product</h3>

<%= render partial: "layouts/error_messages", locals: { model: @product } %>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :photo, 'Photo URL' %>
  <%= f.text_field :photo %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :available %>
  <%= f.number_field :available %>

<%= f.hidden_field :merchant_id%>



<div>
  <%= f.label :categories %>
  <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %>
</div>


  <%= f.submit %>
<% end %>
