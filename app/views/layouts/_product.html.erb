<% if !item.retired %>
<section class="product-item">
  <article>
    <h3><%= link_to item.name, item %></h3>
    <%= image_tag (item.url) %>
  </article>
  <article>
  <ul>
    <li>
    Categories: <% item.categories %>
    </li>
    <li>
      Price: <%= number_to_currency item.price %>
    </li>
    <li>
    Quantity:  <%= item.stock %>
    </li>
    <li>
      <%= form_with url: add_to_cart_path do |f| %>
      <%= f.hidden_field :product_id, value: item.id%>
      <%= f.number_field :quantity, :style => "width:100px;" %>
      <%= submit_tag "add to cart", class: "hollow button primary", method: :post %>
      <% end %>
    </li>
  </ul>
  </article>
  <article>
    <section class='product-reviews'>
      <p>Description: <%= item.description %></p>
      <h4> average rating <% item.average_rating.times do %>
          <%= "ðŸ’§" %>
        <% end %> </h4>
      <p>
        <%= item.reviews.count %>
        <% if item.reviews.count == 1 %>
          review
        <% else %>
          reviews
        <% end %>
      </p>
    </section>
  </article>
</section>
<% else %>
<section class="no-product">
  This item has been discontinued.
</section>
<% end %>
