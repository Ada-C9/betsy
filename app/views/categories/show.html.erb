<h2>Category: <%= @category.name %></h2>

<ul>
<% @category.products.each do |prod| %>
  <section class="products">
  <li>
    <strong><%= link_to(prod.name, product_path(prod)) %></strong>

    <%= link_to("Edit", edit_product_path(prod)) %>
    <%= link_to("Retire", product_path(prod.id), method: :retire, data: { confirm: "Are you sure you want to delete Product #{ prod.name }?" }) %>
  </li>
</section>
<% end %>
</ul>
