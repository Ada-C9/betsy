<section>
  <h3>Categories</h3>
  <ul>
    <% @categories.each do |category| %>
    <li>
      <h4><%= category.name%></h4>
      <ul>
        <% category.products.each do |product| %>
        <li>
          <%= product.name %>
        </li>
        <% end %>
      </ul>

    </li>
    <% end %>
  </ul>
</section>
