<section class="show-merchant-products">
  <h2>
    <%= @merchant.username %>
  </h2>
  <div>
    <% @products.each do |pro| %>
    <section class="grid-container">
      <span><%= link_to image_tag(pro.image, alt: "middle-pro", class: "product-cat-img"), product_path(pro) %></span>
      <div class="product-stuff">
        <ul>
          <li><%= link_to pro.name, product_path(pro) %></li>
          <li>Price: $<%= display_dollars(pro.price) %></li>
          <li>Details: <%= pro.description %></li>
        </ul>
      </div>
    </section>
    <% end %>

  </div>
</section>
