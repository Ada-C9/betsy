<h2><%= @current_merchant.username %></h2>
<section class="order-fulfillment">
  <h3>All Orders: </h3>

  <table>
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Purchase Date</th>
        <th>Total</th>
        <th>Order Status</th>
        <th>Options</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @order_products.each do | order_product | %>
      <tr>
        <td>
          <%=  link_to order_product.order_id, order_path(order_product.order_id), class: 'order-link' %>
        </td>
        <td><%= order_product.order.created_at %></td>
        <td><%= "NEED TOTAL METHOD" %></td>
        <td><%= "NEED TO PUT ORDER STATUS" %></td>
        <td>
          <%= link_to "NEED SHIP PATH"  %>
          <%= link_to "NEED CANCEL PATH" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>


</section>
