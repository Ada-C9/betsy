<section>
  <h3><%= @merchant.username %> - order fulfillment page</h3>
  <br>
  <h4>Total number of paid and complete orders: <%= @orders.count %></h4>
  <h5> Paid orders: <%= @orders.where(status: "paid").count %> /   Complete orders: <%= @orders.where(status: "complete").count %></h5>
  <br>


<h4> Paid Orders </h4>
  <% @orders.where(status: "paid").each do |order| %>
  <ul>
    <li> <%= link_to "Order ##{order.id}", order_path(order.id) %>  (<%= order.created_at.show_date %>) </li>
  </ul>

  <%= render partial: "shared/table" , locals: { table_order_items: order.order_items.where(product_id: @merchant.get_merchant_products), page_title: "#{@merchant.username} orders" } %>
  <br>
  <% end %>

<h4> Completed Orders </h4>
  <% @orders.where(status: "complete").each do |order| %>
  <ul>
    <li> <%= link_to "Order ##{order.id}", order_path(order.id) %>  (<%= order.created_at.show_date %>) </li>
  </ul>

  <%= render partial: "shared/table" , locals: { table_order_items: order.order_items.where(product_id: @merchant.get_merchant_products), page_title: "#{@merchant.username} orders" } %>
  <br>
  <br>
  <% end %>

  <li><%= link_to 'Paid Status', {controller: 'merchants', action: 'order_fulfillment', :status => 'paid'} %></li>
  <li><%= link_to 'Completed Status', {controller: 'merchants', action: 'order_fulfillment', :status => 'completed'} %></li>
