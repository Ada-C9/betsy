<section class="large-9 cell">
  <h3>My products</h3>
  <section class="grid-x">
    <section class="cell medium-auto">
      <% @merchant_products.each do |product| %>
        <ul>
          <li>
            <%= link_to product.name, product_path(product.id) %>
            <%= link_to " - edit product ", edit_product_path(product.id) %>
          </li>
        </ul>
      <%end%>
    </section>
  </section>
</section>
